<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="irAListaSuper"
    tools:context=".Mantenimientos">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Productos"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/lavender"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSuperMercado"
        android:layout_width="172dp"
        android:layout_height="178dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#F44336"
        android:drawableTop="@drawable/market128px"
        android:onClick="irAListaSuper"
        android:text="Supermercados"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.392" />

    <Button
        android:id="@+id/btnProductos"
        android:layout_width="161dp"
        android:layout_height="179dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#2196F3"
        android:drawableTop="@drawable/engrane128px"
        android:onClick="irARegistro"
        android:text="Productos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toEndOf="@+id/btnSuperMercado"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391" />

</androidx.constraintlayout.widget.ConstraintLayout>