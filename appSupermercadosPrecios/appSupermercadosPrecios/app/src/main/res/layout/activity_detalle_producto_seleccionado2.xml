<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleProductoSeleccionado2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNomProd2"
        android:text="Producto"
        android:layout_marginTop="14dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="12sp"
        android:textColor="@color/lavender"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imgProd2"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/uploadimg2"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CÓDIGO:"
        android:padding="0dp"
        android:layout_marginTop="14dp"
        android:textSize="11sp"
        android:layout_marginBottom="0sp"
        android:textColor="@color/lavender"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCodProd2"
        android:text="Codigo"
        android:padding="4dp"
        android:layout_marginTop="0dp"
        android:textSize="10sp"
        android:layout_marginBottom="0sp"
        android:textColor="@color/lavender"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOMBRE:"
        android:padding="0dp"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        android:layout_marginBottom="0sp"
        android:textColor="@color/lavender"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNomProdD2"
        android:text="Nombre"
        android:padding="4dp"
        android:layout_marginTop="0dp"
        android:textSize="10sp"
        android:layout_marginBottom="5sp"
        android:textColor="@color/lavender"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESCRIPCIÓN:"
        android:padding="0dp"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        android:layout_marginBottom="0sp"
        android:textColor="@color/lavender"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescProd2"
        android:text="Descripcion"
        android:padding="4dp"
        android:layout_marginTop="0dp"
        android:textSize="10sp"
        android:layout_marginBottom="5sp"
        android:textColor="@color/lavender"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRECIO2:"
        android:padding="0dp"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        android:layout_marginBottom="0sp"
        android:textColor="@color/lavender"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPrecProd2"
        android:text="Precio"
        android:padding="4dp"
        android:layout_marginTop="0dp"
        android:textSize="10sp"
        android:layout_marginBottom="0sp"
        android:textColor="@color/lavender"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:menu_fab_size="normal"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            app:menu_colorPressed="@color/lavender"
            app:menu_colorNormal="@color/lavender"
            app:menu_icon="@drawable/formas_list"
            app:menu_openDirection="up"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteButton2"
                android:src="@drawable/elimar_icono"
                app:fab_showShadow="true"
                app:fab_colorNormal="#D51E10"
                app:fab_size="mini"/>


        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>


</LinearLayout>